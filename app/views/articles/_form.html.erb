
<div class="container">
  

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 form-css rounded", local: true) do |f| %>
        <div class="form-group row  ">
          <%= f.label :tittle, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :tittle, class: "form-control shadow rounded index-form", placeholder: "Title of article" %>
          </div>
        </div>
   <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded index-form", placeholder: "Description of article" %>
          </div>
        </div>

   <div class="text-center mt-4" >
          <%= f.submit class: "btn btn-outline-success form-search" %>
        </div>
      <% end %>
    </div>

     </div>
</div>
    
