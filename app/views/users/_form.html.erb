
<div class="container">
  

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 form-css rounded", local: true) do |f| %>
        <div class="form-group row  ">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded index-form", placeholder: "Enter a username" %>
          </div>
        </div>
  <div class="form-group row my-1">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.email_field :email, class: "form-control shadow rounded index-form", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.password_field :password, class: "form-control shadow rounded index-form", placeholder: "Choose a password" %>
          </div>
        </div>

   <div class="text-center mt-4" >
          
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-success form-search") %>
        </div>
      <% end %>
    </div>

     </div>
</div>
    
