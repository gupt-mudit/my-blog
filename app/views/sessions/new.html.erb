<div class="article-index">
<h1 class="text-center mt-4">Log in</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3  form-css rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.email_field :email, class: "form-control shadow rounded index-form", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row my-2">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.password_field :password, class: "form-control shadow rounded index-form", placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="text-center mt-4">
          <%= f.submit "Log in", class: "btn btn-outline-success form-search" %>
        </div>
      <% end %>
    </div>
    <div class="text-center mt-4">
     
      <%= link_to "Go back", articles_path,class: "text-white btn btn-primary  index-btn" %> 
    </div>
  </div>
</div>
</div>